<resources>
    <style name="Theme.ZoomLight" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item> 
    </style>
    <!-- 搜索界面 listview -->
    <style name="widget_listview">
        <item name="android:layout_width">fill_parent</item>
   		<item name="android:layout_height">fill_parent</item>
       	<item name="android:layout_weight">1</item>      	
       	<item name="android:listSelector">@drawable/listview_item_selector</item>
       	<item name="android:divider">@drawable/listview_divider_line</item>
       	<item name="android:dividerHeight">1.0dip</item>
       	<item name="android:fadingEdge">none</item>
       	<item name="android:scrollingCache">false</item>
    </style>

    <style name="dialogstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/content_collection_success</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="UGCJumpStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@color/base_transparent</item>
    </style>

   <style name="UGCStyle" parent="android:Theme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@color/base_transparent</item>
    </style>
    
    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/content_collection_success</item>
    </style>

    <style name="Theme" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SearchButton" parent="@android:style/Widget.Button.Small">
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">9dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="MainItemImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HomeTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">left</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="TopTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#D41613</item>
        <item name="android:textSize">26dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="TopFuncStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="NormalStyle1">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="login_title_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/loginmain_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="logoStyle">
        <item name="android:layout_marginTop">@dimen/login_logo_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/login_logo_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/login_logo_marginRight</item>
        <item name="android:src">@drawable/chart_logo</item>
    </style>

    <style name="edittext_padding">
        <item name="android:paddingLeft">@dimen/login_main_edittext_padding</item>
         <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/diagram_inputbox</item>
    </style>

    <style name="RemindTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="login_sendcode_DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="login_registed_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/loginmain_gray</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="login_registed_favorite_content">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/loginmain_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/login_registed_personal_interest_survey_selected_program_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    
    
    
     <style name="Theme.HalfTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>
    <style name="Animation" />
    <style name="Animation.Translucent" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_out</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_exit</item>
    </style>
        <style name="SubnailStyle" parent="@android:style/android:Theme.Dialog">
        <item name="android:windowBackground">@color/base_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>