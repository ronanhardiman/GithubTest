<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/all_bg" >

    <ImageView
        android:id="@+id/logo"
        style="@style/logoStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:id="@+id/ll_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:src="@drawable/login_registered_mail_normal" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/login_registered_phone_selected" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_img"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/login_validation_code"
        android:textColor="#333333"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_check_phone_code"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/diagram_inputbox"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_toRightOf="@id/tv_code"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/iv_resend_phone_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_img"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/et_check_phone_code"
        android:src="@drawable/chongxinfasong"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_resend_phone_code"
        style="@style/login_title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_check_phone_code"
        android:layout_below="@id/et_check_phone_code"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="@string/login_regsited_sendphone_again"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_check_phone_code"
        android:layout_below="@id/et_check_phone_code"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="@string/login_send_code_to_phone"
        android:textColor="#666666"
        android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_count_time"
            style="@style/login_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_send_code"
            android:layout_below="@id/tv_send_code"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="60"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/tv_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_count_time"
            android:layout_toRightOf="@id/tv_count_time"
            android:text="@string/login_send_code_dismiss"
            android:textColor="#666666"
            android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_code_error_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/et_check_phone_code"
        android:visibility="gone"
     >

        <TextView
            android:id="@+id/tv_code_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_regsited_phonecode_error"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/tv_code_resend_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_regsited_need_phonecode"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_registed_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/et_check_phone_code"
        android:layout_marginTop="120dp"
        android:src="@drawable/login_registed_personal_interes_completed_survey" />
	
    <TextView
        android:id="@+id/registied_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_alignParentBottom="true"
        android:text="@string/registied_account_login"
        android:textColor="#1da3e3"
        android:textSize="17sp" />

</RelativeLayout>