<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
		<com.igrs.tivic.phone.ViewGroup.EPGLightShow
		    android:id="@+id/epg_lightshow"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    />
	
		<com.igrs.tivic.phone.ViewGroup.PullToRefreshListView1
		    android:id="@+id/lv_program"
	        android:layout_below="@+id/epg_lightshow"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:cacheColorHint="#00000000"
	        android:divider="@drawable/list_divider"
	        android:fadingEdge="none" />
		<LinearLayout 
		    android:id="@+id/epg_loading"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_below="@+id/epg_lightshow"
		    android:layout_centerInParent="true"
		    android:background="@color/loading_bg"
		    android:paddingRight="5dp"
		    >
		    <include layout="@layout/page_load" />
		</LinearLayout>
	<!-- 
	    <ListView
	        android:id="@+id/lv_program"
	        android:layout_below="@+id/epg_lightshow"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:cacheColorHint="#00000000"
	        android:fadingEdge="none"
	         /> -->
	    <LinearLayout 
	        android:id="@+id/ll_time"
	        android:layout_width="80dp"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:orientation="vertical"
	        android:visibility="gone"
	        >
	        <TextView 
	            android:id="@+id/tv_currentdate"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/padding_medium"
	            android:gravity="center"
	            android:background="#505050"
	            android:textColor="#d6a0c1"
	            android:text="2012.11.27"
	            />
	        <ListView
	            android:id="@+id/lv_time"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:fadingEdge="none"
	            android:divider="#00000000"
	            />
	    </LinearLayout>
	</RelativeLayout>
</RelativeLayout>
