<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="100dp" 
    android:background="@color/content_publish_item_bg">
    <TextView 
        android:id="@+id/program_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/program_time"
        android:ellipsize="end"
        android:textColor="@color/program_info"
        android:layout_margin="@dimen/program_edge_distance"
        android:textSize="@dimen/program_item_title"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerVertical="true"
        />
    <TextView 
        android:id="@+id/program_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/program_info"
        android:textSize="@dimen/program_item_title"
        android:layout_marginRight="@dimen/program_edge_distance"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>