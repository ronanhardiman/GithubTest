<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.igrs.tivic.phone"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <com.igrs.tivic.phone.widget.AsyncImageView
        android:id="@+id/icon_notify"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@color/avater_bg"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/social_notify_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/social_notify_system"
                android:textColor="@color/light_blue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="11-16  13:20"
                android:textSize="14dp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/base_content"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>