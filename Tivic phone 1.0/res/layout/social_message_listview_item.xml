<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.igrs.tivic.phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="horizontal"
    android:padding="5dp" >

    <FrameLayout
        android:layout_width="75dp"
        android:layout_height="75dp" >

        <com.igrs.tivic.phone.widget.AsyncImageView
            android:id="@+id/icon_usr"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:background="@color/avater_bg"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/count_new"
            style="@style/RemindTextStyle"
            android:background="@drawable/base_menu_remind"
            android:gravity="center"
            android:text="@string/social_remind_new"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="用户名"
            android:textColor="@color/light_blue"
            android:textSize="14dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/ugc_gender_femaile" />

            <TextView
                android:id="@+id/text_distence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="1.2km"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:text="17:30"
                android:textSize="14dp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/base_content"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>