<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right|bottom"
    android:layout_marginBottom="25dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="right|bottom"
    android:orientation="horizontal"
    android:paddingRight="20dp"
    android:paddingTop="5dp" >
    
	<ImageView
        android:id="@+id/icon_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center_vertical|right"
        android:src="@drawable/ugc_waterfall_pinglun" />

    <TextView
        android:id="@+id/id_text_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center_vertical|right"
        android:text="180"
        android:textColor="@color/light_red"
        android:textSize="10dp" />
    
    <ImageView
        android:id="@+id/icon_up"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:src="@drawable/ugc_waterfall_zhichi" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_support" >

        <TextView
            android:id="@+id/id_text_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:text="50"
            android:textColor="@color/light_red"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/id_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="+1"
            android:textColor="@color/light_red"
            android:textSize="18dip"
            android:visibility="gone" />
    </FrameLayout>

    

</LinearLayout>