<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tuanchukuang"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ta_haoyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ta_haoyou" />

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/tanchukuang_xian" />

        <ImageView
            android:id="@+id/ta_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ta_shoucang" />

        <ImageView
            android:id="@+id/iv_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/tanchukuang_xian" />

        <ImageView
            android:id="@+id/ta_fatie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ta_fatie" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tanchukuang_xian" />

        <Button
            android:id="@+id/chk_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quxiao_dx"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tanchukuang_xian" />

        <!-- <CheckBox
            android:id="@+id/chk_lahei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/social_laihei_selector"
            android:button="@null" /> -->
         <ImageView
            android:id="@+id/iv_lahei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/social_laihei_selector"
            />
    </LinearLayout>

</RelativeLayout>