<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_top_background"
        android:gravity="center" >

        <Button
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/base_top_return" />
		<TextView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    style="@style/TopTitleStyle"
		    android:gravity="center_horizontal"
		    android:text="@string/social_choose_avater"
		    />
        <Button
            android:id="@+id/bt_finish_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/log_loading_all_top_return" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/social_menu_bar"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/base_top_wave" />

        <GridView
            android:id="@+id/system_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/social_base_signature_gridview_margin"
            android:listSelector="@null"
            android:numColumns="3"
            android:verticalSpacing="@dimen/social_base_signature_gridview_margin" >
        </GridView>
    </LinearLayout>

</LinearLayout>