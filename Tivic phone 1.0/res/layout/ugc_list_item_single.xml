<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/ugc_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 		android:id="@+id/item_main"       
        android:orientation="horizontal"
        >
		<include android:id="@+id/publish_usr_info" layout="@layout/ugc_usr_info" />        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <include android:id="@+id/publish_title" layout="@layout/ugc_publish_title" />  
        <include android:id="@+id/publish_content" layout="@layout/ugc_publish_content" />   
        
        </LinearLayout>
        
	
    </LinearLayout>
        <include android:id="@+id/publish_btns" layout="@layout/ugc_publish_buttons" />
    
</LinearLayout>