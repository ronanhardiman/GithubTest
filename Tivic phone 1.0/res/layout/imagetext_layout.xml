<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:greendroid="http://schemas.android.com/apk/res/com.igrs.tivic.phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.igrs.tivic.phone.widget.AsyncImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4sp"
        android:paddingLeft="2sp"
        android:paddingRight="4sp"
        android:paddingTop="2sp"
        android:scaleType="fitXY"
        greendroid:defaultSrc="@drawable/base_queshengtu4_3" />

    <RelativeLayout
        android:id="@+id/mask_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="4sp" >

        <TextView
            android:id="@+id/left_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:drawablePadding="5sp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/right_icon_delete"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/my_tv_delete"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/video_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pgc_bofang_btn"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>