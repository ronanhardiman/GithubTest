<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_social_signature"
        style="@style/edittext_padding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/social_base_signature_edit_margin_left"
        android:layout_marginRight="@dimen/social_base_signature_edit_margin_right"
        android:layout_marginTop="@dimen/social_base_signature_edit_margin_top"
        android:background="@drawable/social_userinfo_page_signature" >

        <requestFocus />
    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/social_base_userinfo_margin_bottom"
        android:layout_marginLeft="@dimen/social_base_signature_edit_margin_left"
        android:layout_marginRight="@dimen/social_base_signature_edit_margin_right"
        android:layout_marginTop="@dimen/social_base_signature_edit_margin_top"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_quxiao_signature"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quxiao" />

        <Button
            android:id="@+id/bt_social_signature_sure"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/social_sure_selector" />
    </RelativeLayout>

</LinearLayout>