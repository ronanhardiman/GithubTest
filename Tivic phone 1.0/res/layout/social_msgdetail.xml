<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.igrs.tivic.phone">

    <com.igrs.tivic.phone.ViewGroup.PullToRefreshListView1
        android:id="@+id/id_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/c_edit"
        android:layout_alignParentTop="true"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="3dp"
        android:listSelector="#00000000"
        android:paddingBottom="100dp" />

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/social_sixin_luruqu_bg"
        android:orientation="horizontal" >

        <com.igrs.tivic.phone.widget.AsyncImageView
            android:id="@+id/comment_image"
            android:padding="5dp"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="3dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/public_input_pic" />

        <EditText
            android:id="@+id/c_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:hint="@string/default_text_sendmessage"
            android:textColor="@color/base_content"
            android:textSize="16dip" />

        <ImageView
            android:id="@+id/publish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="53dp"
            android:src="@drawable/content_publish_button" />
    </LinearLayout>

</RelativeLayout>