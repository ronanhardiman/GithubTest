<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:gravity="center_horizontal" 
    android:background="@drawable/xiangcekuang" 
    xmlns:app="http://schemas.android.com/apk/res/com.igrs.tivic.phone">

    <!-- android:background="@drawable/xiangcekuang" -->
    <com.igrs.tivic.phone.widget.AsyncImageView
        android:id="@+id/social_iv_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="1dp"
        android:layout_centerInParent="true"
        />
    <ImageView 
        android:id="@+id/social_iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/social_xiangce_button_delete"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>