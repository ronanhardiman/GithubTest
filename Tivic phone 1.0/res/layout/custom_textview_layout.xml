<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" 
        >

        <TextView
            android:id="@+id/custom_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" 
            android:singleLine="true"
	        android:ellipsize="end"
	        android:textColor="#333333"
	        android:textSize="17sp"
	        android:drawablePadding="5sp"/>

        <TextView
            android:id="@+id/custom_textview_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" 
            android:textColor="#999999"
	        android:textSize="12sp"
	        android:textStyle="italic" 
	        android:paddingRight="5sp"/>

        <TextView
            android:id="@+id/custom_textview_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:textColor="#666666"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/focus_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="right"
        android:orientation="vertical" 
        android:layout_marginBottom="3sp">
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical" >
	        <TextView
	            android:id="@+id/custom_textview_percent"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/shoushilv"
	            android:gravity="center_vertical"
	            android:textSize="16sp"
	            android:layout_marginRight="7sp"
	            android:drawablePadding="4sp"
	        	android:maxWidth="65dp"
	        	android:singleLine="true"
	        	android:ellipsize="end"
	            />
	
	        <ImageView
	            android:id="@+id/custom_textview_focus"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:gravity="right"
	            android:src="@drawable/hot_tv_focus_selector" 
	            />
	        <TextView
	            android:id="@+id/custom_textview_percent_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/shoushilv"
	            android:gravity="center_vertical"
	            android:textSize="16sp"
	            android:drawablePadding="4sp"
	        	android:maxWidth="65dp"
	        	android:singleLine="true"
	        	android:ellipsize="end"
	        	android:layout_marginLeft="7sp"
	            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>