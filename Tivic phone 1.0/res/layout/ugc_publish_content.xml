        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:greendroid="http://schemas.android.com/apk/res/com.igrs.tivic.phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:paddingRight="5dp"
                android:gravity="center"
                android:maxLines="4"
                android:layout_gravity="left"
                android:text="test"
                android:textSize="14dp"
                android:ellipsize="end" />
            
	        <com.igrs.tivic.phone.widget.AsyncImageView
	            android:id="@+id/subimg"
	            android:layout_marginTop="5dp"
	            android:padding="5dp"
	            android:layout_marginRight="5dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:maxWidth="64dp"
	            android:maxHeight="64dp"
	            android:scaleType="fitXY"
	            android:background="@drawable/ugc_tupian_bg"
	            android:layout_gravity="bottom|right"
	            greendroid:defaultSrc="@drawable/base_subnail" />

        </LinearLayout>