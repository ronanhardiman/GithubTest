<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_top_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/icon_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_top_background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_back_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/base_top_return" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/base_top_margin"
                android:src="@drawable/base_top_anhui"
                android:visibility="gone" />

            <com.igrs.tivic.phone.ViewGroup.ScrollForeverTextView
                android:id="@+id/text_title"
                style="@style/TopTitleStyle"
                android:layout_width="120dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/base_epg" />

            <ImageView
                android:id="@+id/icon_func"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/base_top_down"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/base_top_search_selector" />

        <ImageView
            android:id="@+id/icon_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/base_top_help_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_top_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/text_selector1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:text="@string/base_mytv"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/text_selector2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:text="@string/base_pushtv"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>